{
  "name": "battle-node-v2",
  "version": "2.1.0",
  "description": "Modern Promise-based BattlEye RCON Client for Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE.txt",
    "README.md"
  ],
  "bin": {
    "battle-rcon": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli.js",
    "dev": "node --loader ts-node/esm src/cli.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mazixs/battle-node-v2.git"
  },
  "keywords": [
    "battleye",
    "rcon",
    "dayz",
    "arma",
    "game-server",
    "udp",
    "node",
    "client"
  ],
  "author": "mazix <mazix@bk.ru>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/node": "^25.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
